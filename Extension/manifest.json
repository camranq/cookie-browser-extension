{
  "manifest_version": 3,
  "name": "Automatic Cookie Banner Rejector",
  "description": "Handles cookie consent options to decline them for you.",
  "version": "0.3.3",

  "icons": {
    "16": "icons/icon16.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },

  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": ["content.js", "id_attributes.js"]
  }],
  
  "permissions": ["activeTab"]
}